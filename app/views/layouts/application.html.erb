<!DOCTYPE html>
<html>
  <head>
    <title>Troca Conhecimento</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Troca Conhecimento</a>
            <%unless user_signed_in? %>
              <%= link_to 'Cadastrar', new_user_registration_path, class: 'btn btn-success navbar-btn' %>
              <%= link_to "Log in", new_user_session_path, class: 'btn btn-success navbar-btn'%>
            <% else %>
              <%= link_to 'Logout', destroy_user_session_path, method: 'delete', class: 'btn btn-success navbar-btn' %>
            <% end %>
            <%= form_tag(filter_ads_path, {method: "get", class: "navbar-form navbar-right" }) do %>
              <%= label_tag(:filter, "Busca") %>
              <%= text_field_tag(:filter) %>
              <%= submit_tag("Buscar" ,{class: "btn btn-success"}) %>
            <% end %>
        </div>
      </div>
    </nav>

    <main>
      <div class='container'>
          <% if flash[:success]%>
          <div class="row">
            <div class='alert alert-success'>
              <%= flash[:success]%>
            </div>
          </div>
          <% end %>

          <% if flash[:error]%>
            <div class="row">
              <div class='alert alert-danger'>
                <%= flash[:error]%>
              </div>
            <% end %>
          </div>


        <div>
          <% if flash[:notice]%>
            <div class="row">
              <div class='alert alert-info'>
                <%= flash[:notice]%>
              </div>
           <% end %>
          </div>
          
        <div>
          <% if flash[:alert]%>
          <div class="row">
            <div class='alert alert-alert'>
            <%= flash[:alert]%>
            </div>
          <% end %>
         </div>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
