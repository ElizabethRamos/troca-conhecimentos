<!DOCTYPE html>
<html>
  <head>
    <title>Troca Conhecimento</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Troca Conhecimento</a>
        </div>
        <% if current_profile %>
          <div class="navbar-text navbar-right">
            <% if current_profile.photo.file? %>
              <%= image_tag current_profile.photo.url(:thumb), class:'img-circle', size:'25x25' %>
            <%else%>
              <%= image_tag 'blank_profile_photo.jpg', class:'img-circle', size:'25x25' %>
            <%end%>
            <%= link_to current_profile.name, profile_path(current_profile), class: 'navbar-link' %>
            <%= link_to 'Logout', destroy_user_session_path, method: 'delete', class: 'btn btn-success navbar-btn' %>
          </div>
        <% else %>
          <%= link_to 'Cadastrar', new_user_registration_path, class: 'btn btn-success navbar-btn' %>
          <%= link_to "Log in", new_user_session_path, class: 'btn btn-success navbar-btn'%>
        <% end %>
        <%= form_tag(filter_ads_path, {method: "get", class: "navbar-form navbar-right" }) do %>
          <%= label_tag(:filter, "Busca") %>
          <%= text_field_tag(:filter, nil,class: 'form-control') %>
          <%= submit_tag("Buscar" ,{class: "btn btn-success"}) %>
        <% end %>
      </div>
    </nav>

    <main>
      <div class='container'>
        <%= render 'shared/alerts'%>
        <%= yield %>
      </div>
    </main>
  </body>
</html>
