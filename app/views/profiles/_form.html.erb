<div class='col-md-6'>
  <%= form_for @profile do |f|%>
    <div class="form-group">
      <%= f.label :name%>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :skills %>
      <%= f.text_area :skills, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo%>
    </div>
    <%= f.submit 'Enviar', class: "btn btn-default"%>
  <% end %>
</div>
